<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>imagecontroller</servlet-name>
        <servlet-class>login.imagecontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChirpController</servlet-name>
        <servlet-class>login.ChirpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getimagecontroller</servlet-name>
        <servlet-class>login.getimagecontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createusercontroller</servlet-name>
        <servlet-class>login.createusercontroller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>imagecontroller</servlet-name>
        <url-pattern>/imagecontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChirpController</servlet-name>
        <url-pattern>/ChirpController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getimagecontroller</servlet-name>
        <url-pattern>/getimagecontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createusercontroller</servlet-name>
        <url-pattern>/createusercontroller</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
